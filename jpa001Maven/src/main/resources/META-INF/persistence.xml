
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
 version="2.0">
 
<!--  puede haber varias unidades de persistencia y cada una conectarse a una bd diferente -->
 <persistence-unit name="UnidadLibros">
 
<!--  este es el mapeo de las clases -->
 <class>es.avalon.jpa.negocio.Libro</class>
  <class>es.avalon.jpa.negocio.Capitulo</class>
  
 <properties>
 <property name= "hibernate.show_sql" value="true" />
 <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
 
<!--  pull de conexion: tenemos varias conexiones -->
 <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
 <property name="javax.persistence.jdbc.user" value="root" />
 <property name="javax.persistence.jdbc.password" value="root" />
 <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/avalon?serverTimezone=UTC" />
 
</properties>
 
</persistence-unit>
</persistence>